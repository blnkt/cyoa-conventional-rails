<% unless @choices.nil? %>
	<% @choices.each do |choice| %>
	  <%= link_to choice.prompt, adventure_chapter_path(@adventure, choice), class: "btn btn-block btn-default" %>
	<% end %>
<% end %>

<%= link_to 'add choice', new_adventure_chapter_path(@adventure), class: "btn btn-block btn-info" %>

<% unless @chapter.parent_id.nil? %>
  <%= link_to 'turn back', adventure_chapter_path(@adventure, Chapter.find(@chapter.parent_id)), class: "btn btn-block btn-warning" %>
<% end %>